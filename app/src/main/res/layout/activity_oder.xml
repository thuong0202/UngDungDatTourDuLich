<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Oder">
    <Button
        android:id="@+id/back_dattour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:drawableTint="#274a8c"
        android:backgroundTint="@android:color/transparent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:gravity="center">


        <EditText
            android:id="@+id/edt_sdtdattour"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/custome_edit_text_register"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="5dp"
            android:drawableTint="#2681ae"
            android:ems="10"
            android:hint="Nhập số điện thoại "
            android:inputType="phone"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/edt_slngdi"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/custome_edit_text_register"
            android:drawableLeft="@drawable/user_small"
            android:drawablePadding="5dp"
            android:drawableTint="#2681ae"
            android:ems="10"
            android:hint="Nhập số lượng người đi"
            android:inputType="text"
            android:paddingLeft="15dp" />


        <Button
            android:id="@+id/btn_orderTour"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt Tour"
            android:textColor="@color/black"
            android:background="@drawable/buttonchon"/>
    </LinearLayout>
</LinearLayout>