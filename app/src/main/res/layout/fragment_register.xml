<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".RegisterFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TẠO TÀI KHOẢN MỚI"
        android:textAlignment="center"
        android:textColor="#274a8c"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Đăng ký tài khoản sẽ giúp bạn sử dụng được đầy đủ các tính năng của ứng dụng"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_sdtDk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/custome_edit_text_register"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="5dp"
        android:drawableTint="#2681ae"
        android:ems="10"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        android:paddingLeft="15dp" />
    <EditText
        android:id="@+id/edt_fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/custome_edit_text_register"
        android:drawableLeft="@drawable/user_small"
        android:drawablePadding="5dp"
        android:drawableTint="#2681ae"
        android:ems="10"
        android:hint="Nhập đầy đủ họ và tên"
        android:inputType="text"
        android:paddingLeft="15dp" />
    <EditText
        android:id="@+id/edt_gioitinh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/custome_edit_text_register"
        android:drawableLeft="@drawable/gioitinh"
        android:drawablePadding="5dp"
        android:drawableTint="#2681ae"
        android:ems="10"
        android:hint="Nhập giới tính"
        android:inputType="text"
        android:paddingLeft="15dp" />
    <EditText
        android:id="@+id/edt_ngaysinh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/custome_edit_text_register"
        android:drawableLeft="@drawable/hanhtrinh"
        android:drawablePadding="5dp"
        android:drawableTint="#2681ae"
        android:ems="10"
        android:hint="Nhập ngày sinh"
        android:inputType="text"
        android:paddingLeft="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="5dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_mk"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:paddingBottom="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/custome_edit_text_register"
            android:drawableLeft="@drawable/lock_small"

            android:drawablePadding="5dp"
            android:drawableTint="#2681ae"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etPasswordLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="5dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nlmk"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_margin="5dp"
            android:background="@drawable/custome_edit_text_register"
            android:drawableLeft="@drawable/lock_small"
            android:paddingBottom="15dp"
            android:drawablePadding="5dp"
            android:drawableTint="#2681ae"
            android:ems="10"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="25dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_dktk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:background="@drawable/custome_button_register"
        android:text="Đăng ký"

        android:textSize="18dp"
        app:backgroundTint="@null" />

</LinearLayout>