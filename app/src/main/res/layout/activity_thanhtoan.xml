<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThanhtoanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:drawableTint="#274a8c"
            android:backgroundTint="@android:color/transparent"
            app:backgroundTint="@null"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Thanh Toán "
            android:gravity="center"
            android:textColor="#274a8c"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:src="@drawable/thanhtoan">

    </ImageView>
    <Button
        android:id="@+id/btn_dattour3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonchon"
        android:text="Đặt Tour"
        android:textColor="@color/black"
        android:layout_gravity="center">
    </Button>

</LinearLayout>