<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custome_login_layout"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custome_button_phone_number"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="5dp"
            android:layout_marginRight="10dp"
            android:drawableTint="@android:color/holo_red_dark"
            android:text="1900 6888"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/logo_login"/>

    <LinearLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CÀI ĐẶT"
            android:textAlignment="center"
            android:textColor="#274a8c"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/vien_setting"
            android:hapticFeedbackEnabled="true"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="218dp"
                android:layout_height="62dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_foreground" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tentk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên tài khoản"
                    android:textColor="#274a8c"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số điện thoại "
                    android:textColor="#2bb0c3"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_user_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_background"
            android:drawableLeft="@drawable/user_small"
            android:drawableTint="#2bb0c3"
            android:text="Thông Tin Cá Nhân"
            android:textAlignment="viewStart"
            android:textColor="#103975" />
        <Button
            android:id="@+id/btn_lsdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_background"
            android:drawableLeft="@drawable/baseline_history_24"
            android:drawableTint="#2bb0c3"
            android:text="Lịch Sử Đặt Tour"
            android:textAlignment="viewStart"
            android:textColor="#103975" />
        <Button
            android:id="@+id/btn_doimk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_background"
            android:drawableLeft="@drawable/password"
            android:drawableTint="#2bb0c3"
            android:layout_marginLeft="3dp"
            android:text="Đổi Mật Khẩu"
            android:textAlignment="viewStart"
            android:textColor="#103975" />
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_background"
            android:drawableLeft="@drawable/book_small"
            android:drawableTint="#2bb0c3"
            android:layout_marginLeft="4dp"
            android:text="Hướng Dẫn Sử Dụng"
            android:textAlignment="viewStart"
            android:textColor="#103975" />


        <Button
            android:id="@+id/btn_dangxuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_background"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:drawableTint="#2bb0c3"
            android:layout_marginLeft="3dp"
            android:text="Đăng Xuất"
            android:textAlignment="viewStart"
            android:textColor="#103975" />
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="390dp"
            android:layout_height="205dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nen"
                android:scaleType="centerCrop" /> <!-- Đảm bảo hình ảnh đổ đầy toàn bộ phạm vi của ImageView -->

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>